<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="chooseCreditOrDebitCardVM" type="com.express.app.modules.choosecreditordebitcard.data.viewmodel.ChooseCreditOrDebitCardVM"/>
    </data>
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" android:paddingEnd="@dimen/_16px"
        android:paddingStart="@dimen/_16px" style="@style/groupStylewhite_A700cornerRadius">
        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
            android:layout_height="wrap_content" android:layout_width="match_parent">
            <LinearLayout android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_24px"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24px" android:layout_width="@dimen/_24px"/>
                <TextView android:gravity="top|start"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12px"
                    android:layout_weight="0.36"
                    android:layout_width="0dp"
                    android:text="@string/lbl_choose_card" style="@style/textStylePoppinsbold16"/>
                <ImageView android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24px" android:layout_width="@dimen/_24px"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView android:fillViewport="true"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_44px"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <LinearLayout android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical" style="@style/groupStylelight_blue_A200cornerRadius">
                    <FrameLayout android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_24px"
                        android:layout_marginStart="@dimen/_24px"
                        android:layout_marginTop="@dimen/_24px" android:layout_width="wrap_content">
                        <FrameLayout
                            android:background="@drawable/oval_bg_gray_400"
                            android:layout_gravity="center|start"
                            android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                        <FrameLayout
                            android:background="@drawable/oval_bg_gray_400"
                            android:layout_gravity="center|end"
                            android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    </FrameLayout>
                    <TextView android:gravity="top|center"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_21px"
                        android:layout_marginStart="@dimen/_21px"
                        android:layout_marginTop="@dimen/_31px"
                        android:layout_width="match_parent"
                        android:text="@string/msg_6326_9124" style="@style/textStylePoppinsbold24"/>
                    <LinearLayout android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_21px"
                        android:layout_marginStart="@dimen/_21px"
                        android:layout_marginTop="@dimen/_17px"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <TextView android:gravity="top|start"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.43"
                            android:layout_width="0dp"
                            android:text="@string/lbl_card_holder" style="@style/textStylePoppinsregular10_2"/>
                        <TextView android:gravity="top|start"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_37px"
                            android:layout_weight="0.57"
                            android:layout_width="0dp"
                            android:text="@string/lbl_card_save" style="@style/textStylePoppinsregular10_2"/>
                    </LinearLayout>
                    <LinearLayout android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_27px"
                        android:layout_marginStart="@dimen/_27px"
                        android:layout_marginTop="@dimen/_2px"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <TextView android:gravity="top|center"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.48"
                            android:layout_width="0dp"
                            android:text="@string/lbl_dominic_ovo" style="@style/textStylePoppinsbold10_3"/>
                        <TextView android:gravity="top|center"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_33px"
                            android:layout_weight="0.52"
                            android:layout_width="0dp"
                            android:text="@string/lbl_19_2042" style="@style/textStylePoppinsbold10_3"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_8px"
                    android:layout_marginTop="@dimen/_16px" android:layout_width="@dimen/_72px"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:gravity="center"
                    android:id="@+id/btnPay76686"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_100px"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_16px"
                    android:paddingEnd="@dimen/_30px"
                    android:paddingStart="@dimen/_30px"
                    android:paddingTop="@dimen/_16px"
                    android:text="@string/lbl_pay_766_86" style="@style/textStylePoppinsbold14"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
