<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="reviewProductVM" type="com.express.app.modules.reviewproduct.data.viewmodel.ReviewProductVM"/>
    </data>
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_16px" style="@style/groupStylewhite_A700cornerRadius">
        <LinearLayout android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <ImageView android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_24px" android:layout_width="@dimen/_24px"/>
            <TextView android:gravity="top|start"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12px"
                android:layout_width="wrap_content"
                android:text="@string/lbl_5_review" style="@style/textStylePoppinsbold16"/>
        </LinearLayout>
        <HorizontalScrollView android:fillViewport="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_44px"
            android:layout_width="match_parent" android:scrollbars="none">
            <LinearLayout android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal" style="@style/groupStylecornerRadius">
                <TextView android:gravity="top|start"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_16px"
                    android:paddingStart="@dimen/_16px"
                    android:paddingTop="@dimen/_16px"
                    android:text="@string/lbl_all_review" style="@style/textStylePoppinsbold12_3"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12px"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="@dimen/_5px"
                    app:cardElevation="@dimen/_1px"
                    app:cardUseCompatPadding="true" style="@style/groupStylecornerRadius_2">
                    <TextView android:layout_gravity="center|end"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_16px"
                        android:layout_marginEnd="@dimen/_16px"
                        android:layout_marginStart="@dimen/_16px"
                        android:layout_marginTop="@dimen/_16px" android:layout_width="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12px"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="@dimen/_5px"
                    app:cardElevation="@dimen/_1px"
                    app:cardUseCompatPadding="true" style="@style/groupStylecornerRadius_2">
                    <TextView android:layout_gravity="center|end"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_16px"
                        android:layout_marginEnd="@dimen/_16px"
                        android:layout_marginStart="@dimen/_16px"
                        android:layout_marginTop="@dimen/_16px" android:layout_width="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12px"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="@dimen/_5px"
                    app:cardElevation="@dimen/_1px"
                    app:cardUseCompatPadding="true" style="@style/groupStylecornerRadius_2">
                    <TextView android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_16px" android:layout_width="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12px"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="@dimen/_5px"
                    app:cardElevation="@dimen/_1px"
                    app:cardUseCompatPadding="true" style="@style/groupStylecornerRadius_2">
                    <TextView android:layout_gravity="center|end"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_16px"
                        android:layout_marginEnd="@dimen/_16px"
                        android:layout_marginStart="@dimen/_16px"
                        android:layout_marginTop="@dimen/_16px" android:layout_width="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12px"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="@dimen/_5px"
                    app:cardElevation="@dimen/_1px"
                    app:cardUseCompatPadding="true" style="@style/groupStylecornerRadius_2">
                    <TextView android:layout_gravity="center|end"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_16px"
                        android:layout_marginEnd="@dimen/_16px"
                        android:layout_marginStart="@dimen/_16px"
                        android:layout_marginTop="@dimen/_16px" android:layout_width="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_32px"
            android:layout_marginTop="@dimen/_20px"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylecornerRadius">
            <LinearLayout android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStylecornerRadius">
                <LinearLayout android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStylecornerRadius">
                    <ImageView android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_48px"
                        android:layout_width="@dimen/_48px"
                        android:scaleType="fitCenter" circular="@{true}" imageRes="@{@drawable/_8a7d68fe92be1f29404445476407d81857a346d3}"/>
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16px"
                        android:layout_weight="0.73"
                        android:layout_width="0dp" android:orientation="vertical">
                        <TextView android:gravity="top|start"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/lbl_james_lawson" style="@style/textStylePoppinsbold14_2"/>
                        <LinearLayout
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_16px"
                            android:layout_marginTop="@dimen/_4px"
                            android:layout_width="match_parent"
                            android:orientation="horizontal" style="@style/groupStylecornerRadius">

                            <androidx.appcompat.widget.AppCompatRatingBar
                                android:id="@+id/ratingBar"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:numStars="5"
                                android:progressTint="@color/yellow_700"
                                android:rating="5" style="@style/Widget.AppCompat.RatingBar.Small"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView android:gravity="top|start"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16px"
                    android:layout_width="match_parent"
                    android:text="@string/msg_air_max_are_alw" style="@style/textStylePoppinsregular12"/>
                <LinearLayout android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16px"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStylecornerRadius">
                    <ImageView android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_72px"
                        android:layout_width="@dimen/_72px"
                        android:scaleType="fitCenter" circular="@{true}" imageRes="@{@drawable/_b76f5fae7367857d3a51392317bbd19925f7f331}"/>
                    <ImageView android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_72px"
                        android:layout_marginStart="@dimen/_12px"
                        android:layout_width="@dimen/_72px"
                        android:scaleType="fitCenter" circular="@{true}" imageRes="@{@drawable/_9a0ca7861a0e3fe8dc274d347ebe01fe3d5a59a3}"/>
                    <ImageView android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_72px"
                        android:layout_marginStart="@dimen/_12px"
                        android:layout_width="@dimen/_72px"
                        android:scaleType="fitCenter" circular="@{true}" imageRes="@{@drawable/_2a8afdbf76f79435ab499fbd1a57ab1bbac7e6ed}"/>
                </LinearLayout>
                <TextView android:gravity="top|start"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16px"
                    android:layout_width="match_parent"
                    android:text="@string/msg_december_10_20" style="@style/textStylePoppinsregular10"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24px"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_24px}" tools:itemCount="2" tools:listitem="@layout/row_review_product"/>
            <LinearLayout android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24px"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStylecornerRadius">
                <FrameLayout android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" style="@style/groupStylecornerRadius">
                    <LinearLayout android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/_48px"
                            android:layout_width="@dimen/_48px"
                            android:scaleType="fitCenter"
                            circular="@{true}" imageRes="@{@drawable/_cc231db97db22db35fca579509e5f549ae037cfc}"/>
                        <TextView android:gravity="top|start"
                            android:id="@+id/txtGriffinRod"
                            android:layout_gravity="top"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16px"
                            android:layout_weight="0.67"
                            android:layout_width="0dp"
                            android:text="@{reviewProductVM.reviewProductModel.txtGriffinRod}" style="@style/textStylePoppinsbold14_2"/>
                    </LinearLayout>
                    <LinearLayout android:layout_gravity="bottom|end"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4px"
                        android:layout_marginTop="@dimen/_28px"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal" style="@style/groupStylecornerRadius">
                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingBar1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:numStars="5"
                            android:progressTint="@color/yellow_700"
                            android:rating="5" style="@style/Widget.AppCompat.RatingBar.Small"/>
                    </LinearLayout>
                </FrameLayout>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtAirMaxAreAlw1"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16px"
                    android:layout_width="match_parent"
                    android:text="@{reviewProductVM.reviewProductModel.txtAirMaxAreAlw1}" style="@style/textStylePoppinsregular12"/>
                <LinearLayout android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16px"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStylecornerRadius">
                    <ImageView android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_72px"
                        android:layout_width="@dimen/_72px"
                        android:scaleType="fitCenter" circular="@{true}" imageRes="@{@drawable/_b76f5fae7367857d3a51392317bbd19925f7f331}"/>
                    <ImageView android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_72px"
                        android:layout_marginStart="@dimen/_12px"
                        android:layout_width="@dimen/_72px"
                        android:scaleType="fitCenter" circular="@{true}" imageRes="@{@drawable/_9a0ca7861a0e3fe8dc274d347ebe01fe3d5a59a3}"/>
                </LinearLayout>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtDecember1020"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16px"
                    android:layout_width="match_parent"
                    android:text="@{reviewProductVM.reviewProductModel.txtDecember1020}" style="@style/textStylePoppinsregular10"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center" android:id="@+id/btnWriteReview"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_32px"
            android:layout_marginTop="@dimen/_30px"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_16px"
            android:paddingEnd="@dimen/_30px"
            android:paddingStart="@dimen/_30px"
            android:paddingTop="@dimen/_16px"
            android:text="@string/lbl_write_review" style="@style/textStylePoppinsbold14"/>
    </LinearLayout>
</layout>
